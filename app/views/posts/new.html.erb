<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :description %>
  <%= f.text_area(:description, :size => '50x10') %>
  <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :title %>

  <%= f.submit%>
<% end %>


